{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Handoff Schema",
  "description": "Structured format for task handoff between Claude Code and Codex",
  "type": "object",
  "required": ["taskId", "from", "to", "taskType", "description"],
  "properties": {
    "taskId": {
      "type": "string",
      "description": "Unique task identifier"
    },
    "from": {
      "type": "string",
      "enum": ["claude", "codex"],
      "description": "Who is handing off the task"
    },
    "to": {
      "type": "string",
      "enum": ["claude", "codex"],
      "description": "Who is receiving the task"
    },
    "taskType": {
      "type": "string",
      "enum": ["implementation", "reasoning", "planning", "specification", "analysis"],
      "description": "Type of task being handed off"
    },
    "description": {
      "type": "string",
      "description": "Detailed task description"
    },
    "context": {
      "type": "object",
      "description": "Additional context",
      "properties": {
        "previousOutputs": {
          "type": "array",
          "items": { "type": "object" },
          "description": "Previous outputs from the handoff chain"
        },
        "sessionId": {
          "type": "string",
          "description": "Shared session ID"
        },
        "relevantFiles": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Relevant file paths"
        },
        "additionalData": {
          "type": "object",
          "description": "Any additional context data"
        }
      }
    },
    "priority": {
      "type": "string",
      "enum": ["critical", "high", "medium", "low"],
      "description": "Task priority"
    },
    "deadline": {
      "type": "string",
      "format": "date-time",
      "description": "Deadline if applicable"
    },
    "dependencies": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Task IDs this task depends on"
    }
  }
}
