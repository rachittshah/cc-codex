{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Reasoning Output Schema",
  "description": "Structured output format for deep reasoning analysis generated by Codex",
  "type": "object",
  "required": ["question", "analysis", "considerations", "approaches", "recommendation", "rationale"],
  "properties": {
    "question": {
      "type": "string",
      "description": "The question or problem being reasoned about"
    },
    "analysis": {
      "type": "string",
      "description": "Detailed analysis of the problem"
    },
    "considerations": {
      "type": "array",
      "description": "Key factors to consider",
      "items": {
        "type": "object",
        "required": ["factor", "description", "impact"],
        "properties": {
          "factor": {
            "type": "string",
            "description": "Factor name"
          },
          "description": {
            "type": "string",
            "description": "Factor description"
          },
          "impact": {
            "type": "string",
            "enum": ["high", "medium", "low"],
            "description": "Impact level"
          }
        }
      }
    },
    "approaches": {
      "type": "array",
      "description": "Different approaches to consider",
      "items": {
        "type": "object",
        "required": ["approach", "pros", "cons", "complexity"],
        "properties": {
          "approach": {
            "type": "string",
            "description": "Approach name"
          },
          "pros": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Advantages"
          },
          "cons": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Disadvantages"
          },
          "complexity": {
            "type": "string",
            "enum": ["low", "medium", "high"],
            "description": "Implementation complexity"
          },
          "recommendation": {
            "type": "string",
            "description": "Additional recommendation notes"
          }
        }
      }
    },
    "recommendation": {
      "type": "string",
      "description": "Final recommendation"
    },
    "rationale": {
      "type": "string",
      "description": "Reasoning behind the recommendation"
    }
  }
}
