{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Plan Output Schema",
  "description": "Structured output format for implementation plans generated by Codex",
  "type": "object",
  "required": ["task", "overview", "phases", "nextSteps"],
  "properties": {
    "task": {
      "type": "string",
      "description": "The task being planned"
    },
    "overview": {
      "type": "string",
      "description": "High-level overview of the plan"
    },
    "phases": {
      "type": "array",
      "description": "Implementation phases",
      "items": {
        "type": "object",
        "required": ["phase", "description", "steps"],
        "properties": {
          "phase": {
            "type": "string",
            "description": "Phase name"
          },
          "description": {
            "type": "string",
            "description": "Phase description"
          },
          "steps": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["step"],
              "properties": {
                "step": {
                  "type": "string",
                  "description": "Step description"
                },
                "duration": {
                  "type": "string",
                  "description": "Estimated duration"
                },
                "dependencies": {
                  "type": "array",
                  "items": { "type": "string" },
                  "description": "Dependencies"
                },
                "risks": {
                  "type": "array",
                  "items": { "type": "string" },
                  "description": "Potential risks"
                }
              }
            }
          }
        }
      }
    },
    "technologies": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Required technologies"
    },
    "timeline": {
      "type": "string",
      "description": "Overall timeline estimate"
    },
    "risks": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Overall risks"
    },
    "nextSteps": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Immediate next steps"
    }
  }
}
